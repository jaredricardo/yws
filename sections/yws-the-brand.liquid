{% style %}
    [data-section-id="{{ section.id }}"]{
        display: flex;
        padding: 40px 0px;
        flex-direction: column;
        align-items: flex-start;
        gap: 40px;
        align-self: stretch;
        background-color:{{ section.settings.bg_color }};
    }
    [data-section-id="{{ section.id }}"] .yws-the-brand{
        display: flex;
        padding: 0px 10px;
        flex-direction: column;
        align-items: flex-start;
        gap: 30px;
        align-self: stretch;
    }
    [data-section-id="{{ section.id }}"] img{
        width:100%;
    }
    [data-section-id="{{ section.id }}"] picture{
        width:100%;
        display:flex;
        flex-direction:column;
    }
    [data-section-id="{{ section.id }}"] .yws-the-brand .brand-img{
        flex-shrink: 0;
        overflow:hidden;
        border-radius:10px;
        width: 100%;
    }
    [data-section-id="{{ section.id }}"] .yws-the-brand .brand-txt{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        gap: 20px;
        align-self: stretch;
    }
    [data-section-id="{{ section.id }}"] .yws-the-brand .brand-txt h2{
        display: flex;
        padding: 0px 20px;
        align-items: flex-start;
        align-self: stretch;
        color: var(--YWS-Off-White, #F3ECDE);
        font-size: 20px;
        font-style: normal;
        font-weight: 700;
        line-height: 20px; /* 100% */
        letter-spacing: 0.4px;
        margin:0;
    }
    [data-section-id="{{ section.id }}"] .yws-the-brand .brand-txt p{
        display: flex;
        padding: 0px 20px;
        justify-content: center;
        align-items: center;
        align-self: start;
        font-size: 18px;
        font-style: normal;
        font-weight: 700;
        line-height: 24px; /* 133.333% */
        letter-spacing: 0.36px;
        color:#F3ECDE;
        margin:0;
    }
    [data-section-id="{{ section.id }}"] .yws-the-brand .btn-container{
        display: flex;
        flex-direction: row;
        align-items: flex-start;
        padding: 0 20px;
        align-self: stretch;
    }
    [data-section-id="{{ section.id }}"] .yws-link-button{
        border:1.5px solid #F3ECDE;
        color:#F3ECDE;
        display: flex;
        width: 180px;
        height: 30px;
        padding: 0px 15px;
        justify-content: space-between;
        align-items: center;
        font-size: 14px;
        font-style: normal;
        font-weight: 700;
        line-height: 16px; /* 114.286% */
        letter-spacing: 1px;
        margin:0;
    }
    @media(min-width:430px){
        [data-section-id="{{ section.id }}"]{
            padding: 80px 0px;
            gap: 40px;
        }
        [data-section-id="{{ section.id }}"] .yws-the-brand{
            padding: 0px 15px;
            gap: 40px;
        }
        [data-section-id="{{ section.id }}"] .yws-the-brand .brand-txt{
            gap: 30px;
        }
        [data-section-id="{{ section.id }}"] .yws-the-brand .brand-txt h2{
            padding: 0px 30px;
            font-size: 36px;
            line-height: 36px; /* 100% */
            letter-spacing: 0.72px;
        }
        [data-section-id="{{ section.id }}"] .yws-the-brand .brand-txt p{
            padding:0 30px;
            font-size:20px;
            line-height:26px;
            letter-spacing:0.4px;
        }
        [data-section-id="{{ section.id }}"] .yws-the-brand .btn-container{
            padding:10px 30px 0 30px;
        }
        [data-section-id="{{ section.id }}"] .yws-the-brand .yws-link-button{
            display: flex;
            width: 322px;
            height: 60px;
            max-width: 360px;
            padding: 0px 30px;
            align-items: center;
            font-size:24px;
            line-height:normal;
            position:relative;
            letter-spacing:1px;
        }
        [data-section-id="{{ section.id }}"] .yws-the-brand .yws-link-button svg{
            width:28.806px;
            height:18px;
        }
    }
    @media(min-width: 834px){
        [data-section-id="{{ section.id }}"]{
            padding: 100px 0px;
            gap: 60px;
        }
        [data-section-id="{{ section.id }}"] .yws-the-brand{
            display:flex;
            flex-direction:row-reverse;
            padding:0 30px;
            gap:30px;
        }
        [data-section-id="{{ section.id }}"] .yws-the-brand .brand-img{
            display:flex;
            flex:3;
        }
        [data-section-id="{{ section.id }}"] .yws-the-brand .brand-txt{
            flex:3;
            gap:30px;
        }
        [data-section-id="{{ section.id }}"] .yws-the-brand .brand-txt h2{
            padding: 0px 30px;
            font-size:48px;
            line-height:48px;
            letter-spacing:0.96px;
        }
        [data-section-id="{{ section.id }}"] .yws-the-brand .brand-txt p{
            padding:0 30px;
            font-size:24px;
            line-height:30px;
            letter-spacing:0.48px;
        }
        [data-section-id="{{ section.id }}"] .yws-the-brand .btn-container{
            padding:0 30px;
            gap:30px;
        }
        [data-section-id="{{ section.id }}"] .yws-the-brand .yws-link-button{
            width:360px;
            height:60px;
            max-width:360px;
            padding:0 30px;
        }
    }
{% endstyle %}
<div data-section-id="{{ section.id }}">
    <div class="yws-the-brand">
        <div class="brand-img">
            <picture>
                <source media="(min-width:834px)" srcset="{{ section.settings.brand_img_desk | img_url:'master' }}">
                <img src="{{ section.settings.brand_img | img_url:'master' }}" alt="{{ section.settings.brand_img | alt }}">
            </picture>
        </div>
        <div class="brand-txt">
            <h2>{{ section.settings.title }}</h2>
            <p>{{ section.settings.text }}</p>
            <div class="btn-container">
                <a href="{{ section.settings.btn_url }}" class="yws-link-button blue">
                    {{ section.settings.btn_txt }}
                    {% render 'yws-icon-right' %}
                </a>
            </div>
        </div>
    </div>
</div>
{% schema %}
    {
        "name":"YWS The Brand",
        "settings":[
            {
                "type":"color",
                "id":"bg_color",
                "default":"#0B3449",
                "label":"Background Color"
            },
            {
                "type":"image_picker",
                "id":"brand_img",
                "label":"Image"
            },
            {
                "type":"image_picker",
                "id":"brand_img_desk",
                "label":"Image Desktop"
            },
            {
                "type":"text",
                "id":"title",
                "label":"Title"
            },
            {
                "type":"textarea",
                "id":"text",
                "label":"Text"
            },
            {
                "type":"text",
                "id":"btn_txt",
                "label":"Button Text"   
            },
            {
                "type":"url",
                "id":"btn_url",
                "label":"Button URL"
            }
        ]
    }
{% endschema %}
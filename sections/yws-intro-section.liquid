{% style %}
    [data-section-id="{{ section.id }}"] {
        background-color: {{ section.settings.bg_color }};
        color: {{ section.settings.text_color }};
    }
{% endstyle %}

<div data-section-id="{{ section.id }}">
    <div class="yws-section-content header-scrollable-section yws-2-6">
        <div class="col"></div>
        <div class="col">
            <h1>{{ section.settings.header }}</h1>
            {% if section.settings.button_link != blank %}
                <a class="yws-link-button" href="{{ section.settings.button_link }}">
                    {{ section.settings.button_link_text }}
                    {% render 'yws-icon-right' %}
                </a>
            {% endif %}
        </div>
    </div>
</div>

{% schema %}
{
    "name": "YWS Intro Section",
    "settings": [ 
        {
            "type": "color",
            "id": "bg_color",
            "label": "Background Color",
            "default": "#F3ECDE"
        },
        {
            "type": "color",
            "id": "text_color",
            "label": "Text Color",
            "default": "#0B3449"
        },
        {
            "type": "textarea",
            "id": "header",
            "label": "Section"
        },
        {
            "type": "text",
            "id": "button_link_text",
            "label": "Button Link Text"
        },
        {
            "type": "url",
            "id": "button_link",
            "label": "Button Link"
        }
    ],
    "presets": [
        {
            "name": "YWS Intro Section"
        }
    ]
}
{% endschema %}